<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waves Of Food"
            android:textColor="#E74C3C"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Revenue Section -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_margin="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRevenueDay"
                    android:text="0$"
                    android:textSize="20sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_margin="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRevenueMonth"
                    android:text="0$"
                    android:textSize="20sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This Month"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_margin="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRevenueYear"
                    android:text="0$"
                    android:textSize="20sp"
                    android:textColor="#2C3E50"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This Year"
                    android:textSize="14sp"
                    android:textColor="#555"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Các nút chức năng -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnViewMenu"
                android:text="Vieu Menu"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FADBD8"
                android:textColor="#C0392B"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btnAllItemMenu"
                android:text="All Item Menu"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FADBD8"
                android:textColor="#C0392B"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btnSold"
                android:text="Sold"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FADBD8"
                android:textColor="#C0392B"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btnUser"
                android:text="User"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FADBD8"
                android:textColor="#C0392B"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btnProfile"
                android:text="Profile"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FADBD8"
                android:textColor="#C0392B"
                android:layout_columnWeight="1"/>

            <Button
                android:id="@+id/btnLogout"
                android:text="Log Out"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:backgroundTint="#FADBD8"
                android:textColor="#C0392B"
                android:layout_columnWeight="1"/>
        </GridLayout>
    </LinearLayout>
</ScrollView>
